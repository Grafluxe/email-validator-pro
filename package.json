{
  "name": "email-validator-pro",
  "description": "Validates an email address against most RFC standards.",
  "main": "dist/EmailValidatorPro.js",
  "scripts": {
    "prepare": "npm run dist -s",
    "dist": "npm run lint -s && npm run babel -s && npm run minify -s",
    "lint": "jshint src/",
    "babel": "babel src/ -o dist/EmailValidatorPro.js",
    "minify": "uglifyjs dist/EmailValidatorPro.js -mco dist/EmailValidatorPro.min.js --preamble \"/*github.com/Grafluxe/email-validator-pro*/\"",
    "doc": "jsdoc -c .jsdocrc"
  },
  "author": "Leandro Silva (http://grafluxe.com)",
  "homepage": "https://github.com/Grafluxe/email-validator-pro",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "Grafluxe/email-validator-pro.git",
  "keywords": [
    "Email validator",
    "Valid email",
    "Email validation",
    "Email parts"
  ],
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "boxy-jsdoc-template": "^1.0.1",
    "jsdoc": "^3.4.3",
    "jshint": "^2.9.4",
    "uglify-js": "^2.7.5"
  }
}
